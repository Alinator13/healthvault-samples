<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#e3e3e3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ActionPlanTile"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/circle_background_action_plan">
            <ImageView
                android:id="@+id/actionPlanImageView"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/habits_icon_selected"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Action Plan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Get help accomplishing your goals in a structred way"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/disclosure_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MedicationTile"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/circle_background_medication">
            <ImageView
                android:id="@+id/medicationImageView"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/meds_icon_selected"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Medications"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Keep track of your current and past medications"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/disclosure_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/WeightTile"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="1">
	    <LinearLayout
		android:layout_width="64dp"
		android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
		android:background="@drawable/circle_background">
		<ImageView
			android:id="@+id/imageView"
			android:layout_width="24dp"
			android:layout_height="28dp"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:src="@drawable/weight_icon"
			 />
	</LinearLayout>
        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Weight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="One of many metrics you can keep track of here"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/disclosure_icon"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ProfileTile"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/circle_background_profile">
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/weight_icon"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Edit personal information associated with the account"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/disclosure_icon"
            />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:visibility="invisible"></ListView>

	<android.support.design.widget.BottomNavigationView
		android:id="@+id/navigation"
		android:layout_width="360dp"
		android:layout_height="49dp"
		android:background="#ffffff"
		android:theme="@style/Theme.AppCompat"
		android:visibility="visible"
		design:itemIconTint="#009688"
        design:itemTextColor="#009688"
		design:menu="@menu/bottom_nav_items" />

</LinearLayout>